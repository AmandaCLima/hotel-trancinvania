generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PromotionType {
    ILIMITADA
    LIMITE_QUARTO
}

model Promotion {
  id Int @id @default(autoincrement())
  discount Int
  type PromotionType
  num_rooms Int?

  @@map("promotion")
}

model Reservation {
  id Int  @id @default(autoincrement())
  Nome String 
  checkin String
  checkout String
  savedReservationUsers UserSavedReservation[] 
  rates RateReservation[] 
  @@map("reservation")
}

model User {
  id Int @id @default(autoincrement())
  savedReservation UserSavedReservation[] 
  rateReservations RateReservation[] 
  @@map("user")
}

model UserSavedReservation {
  user User @relation(fields:[user_id],references:[id])
  reservation Reservation @relation(fields:[reservation_id],references:[id]) 
  user_id Int 
  reservation_id Int
  @@id([user_id, reservation_id])
  @@map("userSavedReservation")
}

model RateReservation{
  user User @relation(fields:[user_id],references:[id])
  reservation Reservation @relation(fields:[reservation_id],references:[id]) 
  user_id Int 
  reservation_id Int
  rating Float 
  comments String?
  @@id([user_id, reservation_id])
  @@map("rateReservation")
}





