generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PromotionType {
    ILIMITADA
    LIMITE_QUARTO
}

enum CardType {
    CREDITO
    DEBITO
}

model Promotion {
  id Int @id @default(autoincrement())
  discount Int
  type PromotionType
  num_rooms Int?

  @@map("promotion")
  publishedReservations PublishedReservation[]
}

model Client {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  phone String
  password String
  cpf String 
  birthDate DateTime

  reservations Reservation[]
}

model PaymentMethod{
  id Int @id @default(autoincrement())
  number String 
  cvv Int 
  expiryDate DateTime
  type CardType

  reservations Reservation[]
}

model Hotelier{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  hotel_name String
  adress String
  cnpj String 

  publishedReservations PublishedReservation[]
}

model PublishedReservation{
  id Int @id @default(autoincrement())
  name String
  num_rooms Int 
  price Float
  num_people Int 
  wifi Boolean
  breakfast Boolean 
  parking Boolean
  airConditioning Boolean
  roomService Boolean
  promotionId Int? 
  hotelierId Int

  Promotion      Promotion? @relation(fields: [promotionId], references: [id])
  Hotelier       Hotelier @relation (fields: [hotelierId], references: [id])

  reservations    Reservation[]
}

model Reservation{
  id Int @id @default(autoincrement())
  num_rooms Int 
  checkin DateTime
  checkout DateTime
  price Float
  publishedReservationId Int
  clientId Int 
  paymentMethodId Int 

  PublishedReservation PublishedReservation @relation(fields: [publishedReservationId], references: [id])
  Client Client @relation(fields: [clientId], references: [id])
  PaymentMethod PaymentMethod @relation(fields: [paymentMethodId], references: [id])

  rooms  Room[]
}

model Room{
  id Int @id @default(autoincrement())
  num_adults Int 
  num_children Int 
  reservationId Int

  Reservation Reservation @relation(fields: [reservationId], references: [id])
}